{
	"Parameters": {
		"QualixSN": {
			"Type": "String"
		},
		"ESInstanceSN1": {
			"Type": "String"
		},
		"ESInstanceSN2": {
			"Type": "String"
		},
		"QualiXInstanceProfile": {
			"Type": "String"
		},
		"ESInstanceProfile": {
			"Type": "String"
		},
		"SG2id": {
			"Type": "String"
		},
		"SG1id": {
			"Type": "String"
		},
		"ESAMI": {
			"Type": "String"
		},
		"QualixAMI": {
			"Type": "String"
		},
		"KeyPair": {
			"Type": "String"
		},
		"ESInstance2Profile": {
			"Type": "String"
		},
		"ServerIP": {
			"Type": "String"
		},
		"ZUsername": {
			"Type": "String"
		},
		"ZPassword": {
			"Type": "String"
		},
		"InstanceSize": {
			"Type": "String"
		}
	},
	"Conditions": {
		"IsHighAvailabilityMode": {
			"Fn::Not": [{
				"Fn::Equals": [ { "Ref": "ESInstanceSN2" }, "NULL" ]
			}]
		}
	},
	"Resources": {
		"QualixInstance": {
			"Type": "AWS::EC2::Instance",
			"Properties": {
				"InstanceType": { "Ref": "InstanceSize" },
				"IamInstanceProfile": {
					"Ref": "QualiXInstanceProfile"
				},
				"SubnetId": {
					"Ref": "QualixSN"
				},
				"KeyName": {
					"Ref": "KeyPair"
				},
				"Tags": [{
					"Key": "Name",
					"Value": "QualiX"
				},
				{
					"Key": "CreateBy",
					"Value": "CloudShell"
				},
				{
					"Key": "Role",
					"Value": "Management"
				}],
				"ImageId": {
					"Ref": "QualixAMI"
				},
				"SecurityGroupIds": [{
					"Ref": "SG1id"
				},
				{
					"Ref": "SG2id"
				}],
				"UserData": {
					"Fn::Base64": {
						"Fn::Join": ["",
						["#!/bin/bash -xe\n",
						"echo 'nameserver 8.8.8.8' >> /etc/resolv.conf\n",
						"echo 'nameserver 4.4.4.4' >> /etc/resolv.conf\n",
						"curl https://s3-us-west-2.amazonaws.com/qualix-ova/guacamole-quali-install.sh -s -o guacamole-quali-install.sh\n",
						"chmod +x guacamole-quali-install.sh\n",
						"./guacamole-quali-install.sh"]]
					}
				}
			}
		},
		"ESInstance1a": {
			"Type": "AWS::EC2::Instance",
			"Properties": {
				"SubnetId": {
					"Ref": "ESInstanceSN1"
				},
				"IamInstanceProfile": {
					"Ref": "ESInstanceProfile"
				},
				"KeyName": {
					"Ref": "KeyPair"
				},
				"Tags": [{
					"Key": "Name",
					"Value": "es-shells"
				},
				{
					"Key": "CreateBy",
					"Value": "CloudShell"
				},
				{
					"Key": "Role",
					"Value": "Management"
				}],
				"ImageId": {
					"Ref": "ESAMI"
				},
				"InstanceType": { "Ref": "InstanceSize" },
				"UserData": {
					"Fn::Base64": {
						"Fn::Join": [
							"",
							[
								"#!/bin/bash -xe\n",
								"echo 'nameserver 8.8.8.8' >> /etc/resolv.conf\n",
								"echo 'nameserver 8.8.4.4' >> /etc/resolv.conf\n",
								"chattr +i /etc/resolv.conf\n",
								"curl https://s3.amazonaws.com/cf-dynamic-execution-server/execution-server/cloudshell_es_install_script.sh --output cloudshell_es_install_script.sh --retry 20 -s -S\n",
								"chmod +rwx ./cloudshell_es_install_script.sh\n",
								"sed -i -e 's/\r$//' ./cloudshell_es_install_script.sh\n",
								"./cloudshell_es_install_script.sh ",
								{
									"Ref": "ServerIP"
								},
								" ",
								{
									"Ref": "ZUsername"
								},
								" ",
								{
									"Ref": "ZPassword"
								},
								" ES-Shells-",
								{
									"Ref": "AWS::Region"
								}
							]
						]
					}
				}
			}
		},
		"ESInstance2a": {
			"Type": "AWS::EC2::Instance",
			"Properties": {
				"SubnetId": {
					"Ref": "ESInstanceSN1"
